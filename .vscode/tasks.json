{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "options": {
        "cwd": "${workspaceFolder}/angular/whereami"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "build",
      "options": {
        "cwd": "${workspaceFolder}/angular/whereami"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "options": {
        "cwd": "${workspaceFolder}/angular/whereami"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test-debug",
      "options": {
        "cwd": "${workspaceFolder}/angular/whereami"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "shell",
      "command": "./venv/Scripts/python.exe -m pip install -r requirements.txt --cache-dir pip-cache",
      "label": "python: install requirements"
    },
    {
      "type": "docker-compose",
      "label": "compose .dev env",
      "dockerCompose": {
        "up": {
          "detached": true,
          "build": true
        },
        "files": [
          "${workspaceFolder}/.dev/docker-compose.yml"
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}/.dev"
      }
    },
    {
      "label": "prepare django",
      "dependsOn": [
        "compose .dev env",
        "python: install requirements"
      ]
    },
    {
      "label": "generate spectacular openapi spec.yaml",
      "type": "shell",
      "command": "./venv/Scripts/python.exe ./manage.py spectacular --color --file ./angular/whereami/src/app/api/generated/spec.yaml --validate",
      "problemMatcher": []
    },
    {
      "label": "generate openapi client",
      "type": "shell",
      "command": "npx ng-openapi-gen --input ./spec.yaml --output ./client/",
      "options": {
        "cwd": "${workspaceFolder}/angular/whereami/src/app/api/generated"
      },
      "problemMatcher": []
    }
  ]
}
